<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <TextView 
	        android:id="@+id/txt_nombre_cancion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="Nombre cancion"/>
	    
	   <TextView 
	        android:id="@+id/txt_album_cancion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/expandable_toggle_button"
            android:layout_alignBottom="@+id/expandable_toggle_button"
            android:layout_alignParentLeft="true"
	        android:layout_below="@+id/txt_nombre_cancion"
	        android:text="Album cancion"/>
	   
	   <TextView 
	        android:id="@+id/txt_duracion_cancion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="2:30"/>
	   
	   <Button
			android:id="@+id/expandable_toggle_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/text"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@id/text"
			android:text="@string/btn_expandir"
			android:layout_below="@+id/txt_duracion_cancion"
			android:textSize="20dp"/>
		</RelativeLayout>
		   
       <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/expandable">

	    <ImageButton
	        android:id="@+id/btn_play"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:src="@android:drawable/ic_media_play" />

    </RelativeLayout>
</LinearLayout>
